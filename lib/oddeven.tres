@R peano
@R addition
@R logic

@D Even : ->(Nat,PROP)

@A x : Nat
@A y : Nat
@< =(+(y,y),x)
@> Even(x)

@A x : Nat
@< Even(x)
@> For some(y,/\(Nat(y),=(+(y,y),x)))

@D Odd : ->(Nat,PROP)

@A x : Nat
@< Even(x)
@> Odd(S(x))

@A x : Nat
@< Odd(x)
@> For some(y,/\(=(x,S(y)),Even(y)))


@A P : ->(Nat,PROP)
@A m : Nat
@< Even(m)
@< P(0)
@< For all(n,=>(P(n),P(S(S(n)))))
@> P(m)